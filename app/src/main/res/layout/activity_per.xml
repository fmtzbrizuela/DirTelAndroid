<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fmb.dirtel.ActivityPer">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Hit contact for detail. Org: "
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/etOrg"
        android:text="Organization"
        android:textSize="15sp"
        android:padding="1dp"
        android:layout_toRightOf="@+id/textView2"
 />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:id="@+id/lvPer"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:background="#e9f8f7" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lvPer"
        android:layout_gravity="bottom"
        android:layout_alignParentStart="true"
        android:background="#c5c7f6">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Name: "
            android:id="@+id/textView4"
            android:layout_gravity="bottom" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:id="@+id/etName"
            android:layout_weight="1"
            android:textSize="15sp"
            android:padding="1dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Tel work: "
            android:id="@+id/textView5"
            android:layout_gravity="bottom" />
        <EditText
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/etTelWork"
            android:layout_weight="1"
            android:textSize="15sp"
            android:padding="1dp" />
        <TextView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Ext: "
            android:id="@+id/textView6"
            android:layout_gravity="bottom"/>

        <EditText
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/etExt"
            android:layout_weight="1"
            android:textSize="15sp"
            android:padding="1dp" />
    </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom">
            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Cell: "
                android:id="@+id/textView7"
                android:layout_gravity="bottom" />
            <EditText
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:id="@+id/etCell"
                android:layout_weight="1"
                android:textSize="15sp"
                android:padding="1dp" />
            <TextView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Home: "
                android:id="@+id/textView8"
                android:layout_gravity="bottom"/>

            <EditText
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:id="@+id/etHome"
                android:layout_weight="1"
                android:textSize="15sp"
                android:padding="1dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="eMail: "
                android:id="@+id/textView9"
                android:layout_gravity="bottom" />
            <EditText
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:id="@+id/eteMail"
                android:layout_weight="1"
                android:textSize="15sp"
                android:padding="1dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
